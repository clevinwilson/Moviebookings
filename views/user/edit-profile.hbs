                        </div>
                        <hr style="background-color: var(--theme-title);">
                        <div class="col-md-12">
                            <label class="col-md-12">Phone Number</label>
                            <p class="ml-3" style="color: var(--theme-title);">{{userdetails.phonenumber}}</p>
                        </div>
                        <hr style="background-color: var(--theme-title);">
                        <div class="col-md-12">
                            <label class="col-md-12">Email</label>
                            <p class="ml-3" style="color: var(--theme-title);">{{userdetails.email}}</p>
                        </div>
                        <div style="float: right;" class="mt-5 buttons">
                            <a style="background-color: black; border-color:black"
                                class="m-2 text-white btn btn-success" href="/pofile">Back</a>
                           <button type="submit" id="submit" class="btn btn-success  mt-3">Submit</button>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- /profile -->
