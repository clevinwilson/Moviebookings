<title> Owner | Profile</title>



<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{>owner-sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">



                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Profile</h1>

                    <div class="row">

                        <div class="col-lg-7">

                            <!-- Circle Buttons -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Details</h6>
                                </div>
                                <div class="message p-3">
                                    {{#if editProfileSucc}}
                                    <div class="alert alert-success" role="alert">
                                        {{editProfileSucc}}
                                    </div>
                                    {{/if}}
                                    {{#if editProfileErr}}
                                    <div class="alert alert-danger" role="alert">
                                        {{editProfileErr}}
                                    </div>
                                </div>
                                {{/if}}
                                <form action="#"  >
                                    <div class="card-body">
                                        <div class="text-center form-group mt-3 col-md-12">
                                            
                                            <img src="/owner-photo/{{profile._id}}.jpg" class="m-2" id="imgView"
                                                style="object-fit: cover; border-radius: 125px;" width="150px" height="150px"
                                                alt="Photo ">
                                            
                                        </div>
                                       
                                        <div class="form-group mt-3 col-md-12">
                                            <label class="text-dark" for="theatername">Theater Name</label>
                                            
                                               <h4 style="color: black;">{{profile.theatername}}</h4>
                                        </div>
                                        <div class="form-group mt-3 col-md-12">
                                            <label class="text-dark" for="email">Email</label>
                                            <h5 style="color: black;">{{profile.email}}</h5>
                                        </div>
                                        <div class="form-group mt-3 col-md-12">
                                            <label class="text-dark" for="phonenumber">Phone Number</label>
                                            <h5 style="color: black;">{{profile.phonenumber}}</h5>
                                        </div>
                                        <center><a href="/owner/dashboard"
                                                class="btn btn-danger  mt-3 mr-2 ">Back</a>
                                            <a href="/owner/edit-profile"
                                                class="fas fa-edit btn btn-success  mt-3 mr-2 "></a></center>
                                    </div>
                                </form>
                            </div>



                        </div>

                    </div>
                </div>
            </div>
        </div>

</body>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>