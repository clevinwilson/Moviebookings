<title> Owner</title>



<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{>owner-sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">



                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Add Movie</h1>

                    <div class="row">

                        <div class="col-lg-11">

                            <!-- Circle Buttons -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Details</h6>
                                </div>
                                <div class="message p-3">
                                    {{#if addMovieSucc}}
                                    <div class="alert alert-success" role="alert">
                                        {{addMovieSucc}}
                                    </div>
                                    {{/if}}
                                    {{#if addMovieErr}}
                                    <div class="alert alert-danger" role="alert">
                                        {{addMovieErr}}
                                    </div>
                                </div>
                                {{/if}}
                                <form action="/owner/add-movie" id="submit-form" method="post"
                                    enctype="multipart/form-data">
                                    <div class="card-body">
                                        <div class="movie-box form-group mt-3 col-md-10">
                                            <label for="movietitle">Movie Title</label>
                                            <input style="border-color:#b4e3eb;" type="text" onkeyup="getMoviesList()"
                                                class="form-control col-md-12 mt-2" id="movietitle" name="movietitle"
                                                required>
                                            <div style="display:none ;" class="autocomplete " id="autocomplete">
                                                <div class="text-center m-2 text-dark">
                                                    Movie not found
                                                </div>

                                            </div>
                                        </div>
                                        <span style="margin-left: 13px; color: green;" id="check_availability_movie"
                                            style="font-size:12px;"></span>
                                        <span style="margin-left: 13px; color:red;" id="check_not_movie"
                                            style="font-size:12px;"></span>
                                        <script>
                                            function getMoviesList() {
                                                let autocomplete = document.getElementById('autocomplete');
                                                let moviename = document.getElementById('movietitle').value;
                                                if (moviename.length > 0) {
                                                    autocomplete.innerHTML = "";
                                                    autocomplete.style.display = 'block';


                                                    fetch(`https://api.themoviedb.org/3/search/movie?api_key=00a55f69b6879e4f888721dcec3ad3c7&language=en-US&query=${moviename}&page=1&include_adult=false`)
                                                        .then((response) => {
                                                            return response.json();
                                                        })
                                                        .then((data) => {
                                                            console.log(data.results)
                                                            let movies = data.results;
                                                            console.log(movies.length)
                                                            if (movies.length > 0) {
                                                                movies.forEach((movie) => {
                                                                    createElement(movie);
                                                                })
                                                            } else {
                                                                errorElement();
                                                            }

                                                        })
                                                        .catch(() => {
                                                            hideAutoComplete()
                                                        })
                                                } else {
                                                    hideAutoComplete();
                                                }

                                                function createElement(movie) {
                                                    const div = document.createElement('div');
                                                    div.innerHTML = movie.original_title;
                                                    div.id = movie.id;
                                                    div.onclick = getMovieDetails;
                                                    div.className = 'mt-2 pl-2 movies-list text-dark';
                                                    autocomplete.append(div);
                                                }
                                                function errorElement() {
                                                    const div = document.createElement('div');
                                                    div.innerHTML = "Movie not found"
                                                    div.className = 'mt-2 pl-2 movies-list text-center text-dark';
                                                    autocomplete.append(div);
                                                }

                                                function hideAutoComplete() {
                                                    autocomplete.style.display = 'none';
                                                }
                                                function getMovieDetails(event) {
                                                    console.log(event.target.id)
                                                    const movieid=event.target.id;
                                                    fetch(`https://api.themoviedb.org/3/movie/${movieid}?api_key=00a55f69b6879e4f888721dcec3ad3c7&language=en-US`)
                                                     .then((response) => {
                                                            return response.json();
                                                        })
                                                      .then((data)=>{
                                                        setData(data);
                                                      })
                                                    
                                                }
                                                function setData(data){
                                                    console.log(data)
                                                   let movieDetails= document.getElementById('movie-details')
                                                    movieDetails.style.display='block';
                                                }
                                            }
                                        </script>
                                        <style>
                                            .autocomplete {
                                                border-radius: 5px;
                                                padding: 16px;
                                                padding-left: 10px;
                                                box-shadow: 2px 2px 9px #b3b3b3;
                                                height: 100%;
                                                max-height: 280px;
                                                display: block;
                                                overflow: scroll;

                                            }

                                            .autocomplete::-webkit-scrollbar {
                                                display: none;
                                            }

                                            .movies-list:hover {
                                                background-color: #efefef;
                                            }
                                        </style>
                                        <div style="display:none ;" id="movie-details" class="movie-details">
                                            <div class="row m-1" id="cast">
                                                <div class="form-group mt-1 col-md-5">
                                                    <label for="Cast">Cast</label>
                                                    <a class="text-white m-1 btn btn-danger" id="remove" onclick="removeElement()">-</a>
                                                    <a class="text-white m-1 btn btn-success" id="add" onclick="addElement()">+</a>
                                                    <input style="border-color:#b4e3eb;" type="text" class="form-control col-md-12 mt-2" id="cast" name="cast"
                                                        required>
                                                </div>
                                                <div class="form-group mt-5 col-md-5">
                                                    <input style="border-color:#b4e3eb;" type="text" class="form-control col-md-12 mt-2" id="castas" name="castas"
                                                        required>
                                                </div>
                                            </div>
                                            
                                            
                                            <div class="form-group mt-3 col-md-10">
                                                <label for="Director">Director</label>
                                                <input style="border-color:#b4e3eb;" type="text" class="form-control col-md-12 mt-2" id="director" name="director"
                                                    required>
                                            </div>
                                            <div class="form-group mt-3 col-md-10">
                                                <label for="Release Date">Release Date</label>
                                                <input style="border-color:#b4e3eb;" type="date" class="form-control col-md-12 mt-2" id="releasedate"
                                                    name="releasedate" required>
                                            </div>
                                            <div class="row m-1">
                                                <div class="form-group mt-3 col-md-5">
                                                    <label for="Run Time">Run Time</label>
                                                    <input style="border-color:#b4e3eb;" type="number" class="form-control col-md-12 mt-2" id="hour" name="hour"
                                                        placeholder="Hour" required>
                                                </div>
                                                <div class="form-group mt-5 col-md-5">
                                                    <input style="border-color:#b4e3eb;" type="number" class="form-control col-md-12 mt-2" id="minute" name="minute"
                                                        placeholder="Minute" required>
                                                </div>
                                            </div>
                                            <div class="form-group mt-3 col-md-10">
                                                <label for="Language">Language</label>
                                                <input style="border-color:#b4e3eb;" type="text" class="form-control col-md-12 mt-2" id="language" name="language"
                                                    required>
                                            </div>
                                            <div class="form-group mt-3 col-md-10">
                                                <label for="Type">Type</label>
                                                <input style="border-color:#b4e3eb;" type="text" class="form-control col-md-12 mt-2" id="type" name="type" required>
                                            </div>
                                            <div class="form-group mt-3 col-md-10">
                                                <label for="Type">About the movie</label>
                                                <textarea style="border-color:#b4e3eb;" type="text" class="form-control col-md-12 mt-2" id="type" name="about"
                                                    required> </textarea>
                                            </div>
                                            <div class="form-group mt-3 col-md-10">
                                                <label for="Trailer Link">Trailer Link</label>
                                                <input style="border-color:#b4e3eb;" type="text" class="form-control col-md-12 mt-2" id="trailerlink"
                                                    name="trailerlink" required>
                                            </div>
                                            <div class="form-group mt-3 col-md-10">
                                                <label for="Trailer Link">Movie Poster</label>
                                                <img src="" id="imgView" height="250px" width="150px">
                                                <input style="border-color:#b4e3eb;" type="file" class="form-control col-md-12 mt-2" name="Image"
                                                    onchange="viewImage(event)" required>
                                            </div>
                                            <div class="form-group mt-3 col-md-10">
                                                <label for="Trailer Link">Banner </label>
                                                <img src="" id="bannerImg" height="200px" width="400px">
                                                <input style="border-color:#b4e3eb;" type="file" class="form-control col-md-12 mt-2" name="Image2"
                                                    onchange="banner(event)" required>
                                            </div>
                                            <center>
                                                <a href="/owner/movie-management" class="btn btn-danger  mt-3 mr-2 ">Cancel</a>
                                                <button type="submit" id="submit" class="btn btn-success  mt-3">Submit</button>
                                            </center>
                                        </div>
                                    </div>
                                </form>
                            </div>



                        </div>

                    </div>
                </div>
            </div>
        </div>

</body>
